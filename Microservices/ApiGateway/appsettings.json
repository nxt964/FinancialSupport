{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "UserService": {
    "BaseUrl": "https://userservice:443"
  },
  "ReverseProxy": {
    "Routes": {
      "user-service-route": {
        "ClusterId": "user-service-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/user/{**catch-all}" }
        ]
      },
      "auth-service-route": {
        "ClusterId": "user-service-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/auth/{**catch-all}" }
        ]
      },
      "token-service-route": {
        "ClusterId": "user-service-cluster",
        "Match": {
          "Path": "/api/token/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/token/{**catch-all}" }
        ]
      },
      "email-service-route": {
        "ClusterId": "email-service-cluster",
        "Match": {
          "Path": "/api/email/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/email/{**catch-all}" }
        ]
      },
      "news-service-route": {
        "ClusterId": "news-service-cluster",
        "Match": {
          "Path": "/api/graphql/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/graphql/{**catch-all}" }
        ]
      },
      "binance-service-route": {
        "ClusterId": "chart-service-cluster",
        "Match": {
          "Path": "/api/binance/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/binance/{**catch-all}" }
        ]
      },
      "chart-hub-route": {
        "ClusterId": "chart-hub-cluster",
        "Match": {
          "Path": "/api/chartHub/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/chartHub/{**catch-all}" }
        ]
      },
      "backtest-service-route": {
        "ClusterId": "backtest-service-cluster",
        "Match": {
          "Path": "/api/backtest/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/backtest/{**catch-all}" }
        ]
      },
      "ai-service-route": {
        "ClusterId": "ai-service-cluster",
        "Match": {
          "Path": "/api/ai/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      },
      "chart-subscription-route": {
        "ClusterId": "user-service-cluster",
        "Match": {
          "Path": "/api/chart-subscription/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/chart-subscription/{**catch-all}" }
        ]
      },
      "account-login-route": {
        "ClusterId": "user-service-cluster",
        "Match": {
          "Path": "/Account/Login"
        },
        "Transforms": [
          { "PathPattern": "/Account/Login" }
        ]
      }
    },
    "Clusters": {
      "user-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://userservice:443/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true,
          "MaxConnectionsPerServer": 10
        },
        "HttpRequest": {
          "Version": "2.0"
        }
      },
      "email-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://emailservice:443/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "news-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://newsservice:5005/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "chart-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://chartservice:443/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "chart-hub-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://chartservice:443/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "backtest-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://backtestservice:443/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      },
      "ai-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://aiservice:8001/"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        }
      }
    }
  },
  "IpRateLimit": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "127.0.0.1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 500
          }
        ]
      }
    ]
  },
  "ClientRateLimit": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 2000
      }
    ]
  },
  "ClientRateLimitPolicies": {
    "ClientRules": [
      {
        "ClientId": "standard-user",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1s",
            "Limit": 10
          },
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 150
          }
        ]
      },
      {
        "ClientId": "premium-user",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 1000
          },
          {
            "Endpoint": "*",
            "Period": "1h",
            "Limit": 10000
          }
        ]
      },
      {
        "ClientId": "admin-user",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 10000
          },
          {
            "Endpoint": "*",
            "Period": "1h",
            "Limit": 100000
          }
        ]
      }
    ]
  }
}
